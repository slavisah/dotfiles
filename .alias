# ----------
# GENERAL
# ----------

#  alias to interact with dotfiles repository
alias dotfiles='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

# alias to interact with configuration repositorys	
alias config='/usr/bin/git --git-dir=$HOME/configuration/ --work-tree=$HOME'

# Lock the screen (when going AFK - Away From Keyboard)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

alias dps='docker ps --format "table {{.Names}}\t{{.Status}}"'

alias mq-explorer="~/software/mq-explorer/Eclipse.app/Contents/MacOS/eclipse"

# ----------
# Python
# ----------

# create a new venv in current directory
alias mkvenv='virtualenv -p python3.7 venv3.7'
# activate virtual env
alias venv='. ./venv*/bin/activate'

alias pipenv-install='PIPENV_VENV_IN_PROJECT=1 pipenv install'

# ----------
# AWS
# ----------

alias aws='AWS_PAGER="" aws'
